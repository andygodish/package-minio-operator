{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "recreateClosed": true,

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.ya?ml$/"],
        "matchStrings": [
          "(?m)^(?<indent>[ \\t]*)- name: PACKAGE_VERSION\\s*\\n[ \\t]*description: \"Version of the package\"\\s*\\n[ \\t]*default: \"(?<currentValue>[^\"]+)\""
        ],
        "datasourceTemplate": "github-releases",
        "depNameTemplate": "defenseunicorns/uds-package-minio-operator",
        "extractVersionTemplate": "^(?:minio-operator\\s+)?v?(?<version>\\d+\\.\\d+\\.\\d+-uds\\.\\d+)-(?:upstream|unicorn|registry1)$",
        "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-uds\\.(?<build>\\d+)$",
        "autoReplaceStringTemplate": "{{{indent}}}- name: PACKAGE_VERSION\n{{{indent}}}  description: \"Version of the package\"\n{{{indent}}}  default: \"{{{version}}}\""
      }
    ],

  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["defenseunicorns/uds-package-minio-operator"],
      "groupName": "Minio Operator Package",
      "semanticCommitType": "deps",
      "semanticCommitScope": "minio",
      "commitMessageTopic": "Minio Operator package",
      "prTitle": "deps(minio): update minio operator package to {{newVersion}}"
    }
  ]
}
